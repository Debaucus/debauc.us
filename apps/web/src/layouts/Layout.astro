---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Full Stack Developer Log" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen border-x border-zinc-900">
    <div
      class="fixed top-0 left-0 w-full h-[1px] bg-zinc-800 z-50 pointer-events-none animate-reveal"
    >
    </div>
    <div
      class="fixed top-0 left-0 h-full w-[1px] bg-zinc-800 z-50 pointer-events-none animate-reveal"
    >
    </div>
    <div
      class="fixed top-0 right-0 h-full w-[1px] bg-zinc-800 z-50 pointer-events-none animate-reveal"
    >
    </div>
    <div
      class="fixed bottom-0 left-0 w-full h-[1px] bg-zinc-800 z-50 pointer-events-none animate-reveal"
    >
    </div>

    <header
      class="border-b border-zinc-800 bg-zinc-950/95 backdrop-blur-sm sticky top-0 z-40 animate-reveal delay-100"
    >
      <nav
        class="container mx-auto max-w-7xl flex items-stretch border-x border-zinc-800"
      >
        <a
          href="/"
          class="px-6 py-4 border-r border-zinc-800 text-zinc-100 font-bold hover:bg-zinc-900 transition-colors uppercase tracking-widest flex items-center gap-2"
        >
          <span class="text-emerald-500">◆</span> DEBAUCUS
        </a>
        <div class="flex-1"></div>
        <a
          href="/"
          class="px-6 py-4 border-l border-zinc-800 text-zinc-400 hover:text-zinc-100 hover:bg-zinc-900 transition-colors text-xs font-semibold uppercase tracking-wider flex items-center"
        >
          Blog
        </a>
      </nav>
    </header>

    <main
      class="flex-grow container mx-auto max-w-7xl border-x border-zinc-800 bg-zinc-950 animate-reveal delay-200"
    >
      <slot />
    </main>

    <footer class="border-t border-zinc-800 bg-zinc-950 mt-auto">
      <div
        class="container mx-auto max-w-7xl px-6 py-4 border-x border-zinc-800 flex justify-between items-center text-xs uppercase tracking-widest text-zinc-600"
      >
        <div>
          © {new Date().getFullYear()} Debauc.us
        </div>
        <div class="flex gap-4">
          <span class="hover:text-zinc-300 cursor-pointer transition-colors"
            >Github</span
          >
          <span class="hover:text-zinc-300 cursor-pointer transition-colors"
            >Mail</span
          >
        </div>
      </div>
    </footer>
  </body>
</html>
