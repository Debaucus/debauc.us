---
import { db } from "../lib/db";
import { posts } from "../lib/schema";
import { desc, eq } from "drizzle-orm";
import Layout from "../layouts/Layout.astro";

const allPosts = await db
  .select()
  .from(posts)
  .where(eq(posts.status, "published"))
  .orderBy(desc(posts.publishedDate));
---

<Layout title="Debauc.us Blog">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Latest Posts</h1>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        allPosts
          .filter((post: any) => post.slug)
          .map((post: any) => (
            <article class="border rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow flex flex-col">
              <h2 class="text-2xl font-bold mb-2">
                <a href={`/${post.slug}`} class="hover:underline">
                  {post.title}
                </a>
              </h2>
              <p class="text-gray-500 text-sm mb-4">
                {post.publishedDate
                  ? new Date(post.publishedDate).toLocaleDateString()
                  : "Published"}
              </p>
              {post.excerpt && (
                <p class="text-gray-700 mb-4 flex-grow">{post.excerpt}</p>
              )}
              <a
                href={`/${post.slug}`}
                class="text-blue-500 hover:underline mt-auto"
              >
                Read more &rarr;
              </a>
            </article>
          ))
      }
    </div>
  </main>
</Layout>
